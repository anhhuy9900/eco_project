{{ attach_library('btw2017/btw-city-detail') }}
<div class="page page-destination-detail">
    <section class="hero {{ data.type }}">
        {% if data.top_banner_data %}
            <img class="thumb hidden-xs" src="{{ data.top_banner_data.thumbnail }}"/>
            <img class="thumb visible-xs" src="{{ data.top_banner_mobile }}"/>
        {% endif %}
        {% if data.type == 'video' %}
            <a class="link js-modal-view" href="javascript:void(0);" data-target="#modal" data-type="{{ data.type }}"
               data-url="{{ data.youtube_video_id }}">
                  <span class="hero-info">
                    <i class="icon icon-play hidden-xs"></i>
                    <i class="icon icon-play-mobile visible-xs-inline-block"></i>
                  </span>
            </a>
        {% endif %}
    </section>
    <section class="tabs">
        <div class="wrap-tab-top">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="tab-nav">
                            <a href="{{ url('<front>') }}/destination">Destination</a>

                            <h2 class="heading">{{ data.title }}</h2>
                        </div>
                        <ul>

                            <li class="active">
                                <a href="javascript:void(0)">
                                    <i class="icon icon-tab-see"></i>
                                    <i class="icon icon-active icon-tab-see-active"></i>
                                    <span>see</span>
                                </a>
                            </li>

                            <li class="">
                                <a href="">
                                    <i class="icon icon-tab-taste"></i>
                                    <i class="icon icon-active icon-tab-taste-active"></i>
                                    <span>taste</span>
                                </a>
                            </li>

                            <li class="">
                                <a href="javascript:void(0)">
                                    <i class="icon icon-tab-do"></i>
                                    <i class="icon icon-active icon-tab-do-active"></i>
                                    <span>do</span>
                                </a>
                            </li>

                            <li class="">
                                <a href="javascript:void(0)">
                                    <i class="icon icon-tab-all"></i>
                                    <i class="icon icon-active icon-tab-all-active"></i>
                                    <span>all</span>
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="wrap-tab-content">
            <section>
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <header>
                                <h2 class="heading">{{ data.city_tab_see_data.title ?? '' }}</h2>
                                <p class="desc">{{ data.city_tab_see_data.summary ?? '' }}</p>
                            </header>
                            {% if data.city_tab_see_data.position_item %}
                                <div class="info">
                                    <ul>
                                        {% for position in data.city_tab_see_data.position_item %}
                                            <li>
                                                <a class="js-marker-info marker-{{ loop.index }}"
                                                   data-index="{{ loop.index0 }}"
                                                   href="javascript:void(0);">{{ position.title }}</a>

                                                <div class="marker-content">
                                                </div>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                    <div class="info-detail hidden-xs hidden-sm">
                                    </div>
                                    {% if data.file_download %}
                                    <div class="function">
                                        <a href="{{ data.file_download }}" class="button-action js-download-pdf" target="_blank">
                                            <i class="icon icon-pdf"></i>
                                            <span>Download as PDF</span>
                                        </a>
                                    </div>
                                    {% endif %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div id="maps"></div>
            </section>
        </div>
        <div class="wrap-tab-content content-all hide">
            <section>
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <header>
                                <h2 class="heading">{{ data.city_tab_see_data.title ?? '' }}</h2>

                                <p class="desc">{{ data.city_tab_see_data.summary ?? '' }}</p>
                            </header>
                            <ul class="list-all">
                                {% for item in data.all_tab_data %}
                                    <li class="{{ item.type }}">
                                        <article>
                                            <figure>
                                                <a href="javascript:void(0)" class="link js-action-link"
                                                   data-type="{{ item.type }}"
                                                   data-target="#modal"{% if item.type == 'map' %} data-map="popup-maps"{% endif %}>
                                                    {% for image in item.images %}
                                                        <img src="{{ image.thumb }}"/>
                                                    {% endfor %}
                                                </a>
                                                <div class="data hidden">{{ item.json | raw }}</div>
                                            </figure>
                                            <div class="city-info">
                                                <h3 class="head">{{ item.head }}</h3>

                                                <p class="desc">{{ item.desc }}</p>
                                                <a href="javascript:void(0)" class="link js-action-link"
                                                   data-type="{{ item.type }}"
                                                   data-target="#modal"{% if item.type == 'map' %} data-map="popup-maps"{% endif %}>{{ item.button }}</a>

                                                <div class="data hidden">{{ item.json | raw }}</div>
                                            </div>
                                        </article>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
    <section class="banner-promote">
        <header class="banner-info">
            <h2 class="head">Kids stay & eat free</h2>
            <a class="banner-button" href="{{ data.learn_more_link??'#learn-more-link' }}" target="_blank">Learn more</a>
        </header>
    </section>
    <div id="modal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">

            <div class="modal-content">
                <button type="button" class="close" data-dismiss="modal">Close</button>
                <div class="modal-body">
                    <div class="wrap wrap-video">
                        <iframe frameborder="0" allowfullscreen></iframe>
                    </div>
                    <div class="wrap wrap-image">
                        <img/>
                    </div>
                    <div class="wrap wrap-gallery">
                        <figure></figure>
                        <ul></ul>
                    </div>
                    <div class="wrap wrap-map">
                        <div id="popup-maps"></div>
                        <div class="map-info"></div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript">
    var map_center = {{ data.map_default_latln | raw }};
    var data = {{ data.json_tab | raw }};
    window.onload = function () {
        setTimeout(function () {
            initMap();
        }, 1000);
    }
</script>
{{ attach_library('btw2017/btw-google-maps') }}
