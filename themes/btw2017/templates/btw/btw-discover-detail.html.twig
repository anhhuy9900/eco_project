{{ attach_library('btw2017/btw-discover-detail') }}
<div class="page page-discover">
    <section class="hero ">
        {% if data.discover_data.top_banner??false %}
            <img class="thumb hidden-xs" src="{{ data.discover_data.top_banner }}"/>
            <img class="thumb visible-xs" src="{{ data.discover_data.top_banner_mobile }}"/>
        {% else %}
            <img class="thumb hidden-xs" src="{{ base_path ~ directory }}/assets/images/dummy/discover-hero.jpg"/>
            <img class="thumb visible-xs" src="{{ base_path ~ directory }}/assets/images/dummy/discover-hero.jpg"/>
        {% endif %}
    </section>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <section class="discover-content">
                    <header>
                        <h2 class="heading">{{ data.discover_data.title??'...' }}</h2>
                        <h3 class="head">{{ data.discover_data.sub_title??'...' }}</h3>
                    </header>
                    <div class="content">
                        {{ (data.discover_data.body??'...')|raw }}
                    </div>
                </section>

                <section class="discover-func">
                    {% if (data.discover_data.discover_item_list??[])|length > 0 %}
                        <div class="list">
                            {% for item in data.discover_data.discover_item_list??[] %}
                                <article>
                                    <figure>
                                        <a target="_blank" href="{{ item.link??'#link' }}">
                                            <figcaption>
                                                <h3>
                                                    {{ item.title??'...' }}
                                                </h3>
                                            </figcaption>
                                            {% if item.thumb??false %}
                                                <img src="{{ item.thumb }}"/>
                                            {% else %}
                                                <img src="{{ base_path ~ directory }}/assets/images/dummy/discover-list-img-1.jpg"/>
                                            {% endif %}
                                        </a>
                                    </figure>
                                    <div class="info">
                                        <p class="desc">{{ item.summary??'...' }}</p>
                                    </div>
                                </article>
                            {% endfor %}
                        </div>
                    {% endif %}
                    <ul class="filter list-action">
                        {% for item in data.discover_data.category_list??[] %}
                            <li>
                                <a href="javascript:void(0);" class="discover-tab {% if item.is_active == 1 %}active{% endif %}" data-tab="category-{{ item.id }}">{{ item.name }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                    {% for item in data.discover_data.category_list??[] %}
                        <div id="category-{{ item.id }}" class="list-hotel discover-tab-content {% if item.is_active == 0 %} hidden{% endif %}">
                            {% for item2 in item.item_list %}
                                <article>
                                    <figure>
                                        <a target="_blank" href="{{ item2.link??'#link2' }}">
                                            {% if item2.thumb??false %}
                                                <img src="{{ item2.thumb }}"/>
                                            {% else %}
                                                <img src="{{ base_path ~ directory }}/assets/images/dummy/discover-hotel-img-1.jpg"/>
                                            {% endif %}
                                        </a>
                                    </figure>
                                    <div class="info">
                                        <h3>
                                            {{ item2.title??'...' }}
                                        </h3>
                                        <label class="location">{{ item2.category_name??'...' }}</label>
                                        <div>
                                            <a class="link-offer" target="_blank" href="{{ item2.link??'#link2' }}">
                                                <i class="icon icon-tags"></i>
                                                <span>View Offers</span>
                                            </a>
                                            <a class="link-more" target="_blank" href="{{ item2.book_now_link??'#link2' }}">
                                                Find out more and book now
                                            </a>
                                        </div>
                                    </div>
                                </article>
                            {% endfor %}
                        </div>
                    {% endfor %}
                    <div class="func">
                        <a target="_blank" href="{{ data.find_more_link??'#find-more-link' }}">Find more hotels</a>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <section class="banner-promote">
        <header class="banner-info">
            <h2 class="head">Kids stay & eat free</h2>
            <a class="banner-button" href="{{ data.learn_more_link??'#learn-more-link' }}" target="_blank">Learn more</a>
        </header>
    </section>
</div>